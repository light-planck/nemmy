{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["after 12am on sunday"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^frontend/package.json$"],
      "groupName": "frontend npm updates",
      "matchUpdateTypes": ["minor", "pin", "pinDigest"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^swagger/package.json$"],
      "groupName": "swagger npm updates",
      "matchUpdateTypes": ["minor", "pin", "pinDigest"],
      "automerge": true
    }
  ]
}
